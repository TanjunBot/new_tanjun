{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchManagers": ["pip_requirements", "pip_setup", "pipenv", "poetry"],
      "groupName": "python-dependencies",
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "matchPackageNames": ["discord.py", "openai", "mysql-connector-python"],
      "groupName": "critical-python-dependencies",
      "automerge": false,
      "schedule": ["before 6am on Monday"]
    },
    {
      "matchUpdateTypes": ["major", "patch"],
      "separateMajorMinor": true
    },
    {
      "matchDepTypes": ["dependencies"],
      "stabilityDays": 3
    }
  ],
  "labels": ["dependencies"],
  "commitMessagePrefix": "chore(deps): ",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "enabledManagers": ["pip_requirements", "pip_setup", "pipenv", "poetry"],
  "pip_requirements": {
    "fileMatch": ["requirements.txt", "requirements/.*\.txt"]
  }
}
